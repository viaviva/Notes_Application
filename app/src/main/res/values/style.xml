<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sdp_18</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyleNewTitles">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/red_hat_display_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sdp_20</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextItemTitleStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/red_hat_display_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sdp_20</item>
        <item name="android:layout_marginBottom">@dimen/sdp_8</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sdp_18</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sdp_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="RecyclerViewItemStyle">
        <item name="android:background">@color/main_color</item>
        <item name="android:paddingTop">@dimen/sdp_28</item>
        <item name="android:paddingHorizontal">@dimen/sdp_16</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextItemStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/note_text_color</item>
        <item name="android:fontFamily">@font/public_sans_regular</item>
        <item name="android:textSize">@dimen/sdp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="deleteButton">
        <item name="android:layout_width">@dimen/sdp_138</item>
        <item name="android:layout_height">@dimen/sdp_38</item>
        <item name="android:fontFamily">@font/public_sans_medium</item>
        <item name="android:textSize">@dimen/sdp_16</item>
        <item name="backgroundTint">@color/edittext_color</item>
        <item name="android:padding">@dimen/sdp_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/sdp_20</item>
    </style>

</resources>